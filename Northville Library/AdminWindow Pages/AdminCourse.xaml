<Page x:Class="Northville_Library.AdminWindow_Pages.AdminCourse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Northville_Library.AdminWindow_Pages"
      mc:Ignorable="d" 
           d:DesignHeight="700" d:DesignWidth="815"
      Title="AdminCourse">
    <Grid Background="#800000">
        <StackPanel>
            <Label Content="Course List" FontSize="40" Foreground="White" Margin="25,5,25,0" FontWeight="Bold"/>
            <GroupBox Header="Course List" Margin="20,5,30,11" FontSize="20" Foreground="White" Height="420">
                <StackPanel>
                    <DataGrid x:Name="courseDataGrid" AutoGenerateColumns="True" IsReadOnly="True" 
                              SelectionMode="Single" Height="375" FontSize="50" Margin="5" 
                              AutoGeneratingColumn="staffDataGrid_AutoGeneratingColumn" 
                              SelectionChanged="staffDataGrid_SelectionChanged"/>
                </StackPanel>
            </GroupBox>
            <StackPanel Orientation="Horizontal" Width="744" Margin="0,20,0,0">
                <Label Content="Course ID:" FontSize="20" Foreground="White" Margin="0,0,0,0"/>
                <TextBox x:Name="courseIDTB" FontSize="20" Width="250"/>
                <Label Content="Course Name:" FontSize="20" Foreground="White" Margin="10,0,0,0"/>
                <TextBox x:Name="coursenameTB" FontSize="20" Width="250" Margin="0,0,0,0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0">
                <Button x:Name="AddEditBTN" Content="Add" Width="100" Height="40" FontSize="13" Click="AddEditBTN_Click" Margin="0,0,5,0"/>
                <Button x:Name="deleteBTN" Content="Delete" Width="100" FontSize="13" Margin="0,0,5,0" Click="deleteBTN_Click" IsEnabled="False"/>
                <Button x:Name="deselectBTN" Content="Deselect" Width="100" FontSize="13" Click="deselectBTN_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
