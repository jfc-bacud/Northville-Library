<Page x:Class="Northville_Library.AdminWindow_Pages.AdminStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Northville_Library.AdminWindow_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="815"
      Title="AdminStudent">
    <Grid Background="#800000">
        <StackPanel>
            <Label Content="Student" FontSize="40" Foreground="White" Margin="25,5,25,0" FontWeight="Bold"/>
            <GroupBox Header="Student List" Margin="20,5,30,11" FontSize="20" Foreground="White" Height="258">
                <StackPanel>
                    <DataGrid x:Name="studentDataGrid" AutoGenerateColumns="True" IsReadOnly="True" 
                              SelectionMode="Single" Height="213" FontSize="14" Margin="5" 
                              AutoGeneratingColumn="staffDataGrid_AutoGeneratingColumn" 
                              SelectionChanged="staffDataGrid_SelectionChanged"/>
                </StackPanel>
            </GroupBox>
            <StackPanel Orientation="Horizontal" Width="744" Margin="0,20,0,0">
                <Label Content="Student ID:" FontSize="20" Foreground="White" Margin="0,0,0,0"/>
                <TextBox x:Name="studentIDTB" FontSize="20" Width="250"/>
                <Label Content="Course:" FontSize="20" Foreground="White" Margin="55,0,0,0"/>
                <ComboBox x:Name="courseCB" FontSize="20" Width="254" SelectedValuePath="Content" SelectedIndex="0"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="748" Margin="0,20,0,0">
                <Label Content="First Name:" FontSize="20" Foreground="White"/>
                <TextBox x:Name="studentFirstNameTB" FontSize="20" Width="250" Margin="0,0,23,0"/>
                <Label Content="Last Name:" FontSize="20" Foreground="White"/>
                <TextBox x:Name="studentLastNameTB" FontSize="20" Width="254"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="743" Margin="0,20,0,0">
                <Label Content="Email:" FontSize="20" Foreground="White" Margin="45.5,0,0,0"/>
                <TextBox x:Name="studentEmailTB" FontSize="20" Width="250"/>
                <Label Content="Contact:" FontSize="20" Foreground="White" Margin="48,0,0,0"/>
                <TextBox x:Name="studentContactTB" FontSize="20" Width="254"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Width="746" Margin="0,20,0,30">
                <Label Content="Password" FontSize="20" Foreground="White" Margin="17,0,0,0"/>
                <TextBox x:Name="passwordTB" FontSize="20" Width="250"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="AddEditBTN" Content="Add" Width="100" Height="40" FontSize="13" Click="AddEditBTN_Click" Margin="0,0,5,0"/>
                <Button x:Name="deleteBTN" Content="Delete" Width="100" FontSize="13" Margin="0,0,5,0" Click="deleteBTN_Click" IsEnabled="False"/>
                <Button x:Name="deselectBTN" Content="Deselect" Width="100" FontSize="13" Click="deselectBTN_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
