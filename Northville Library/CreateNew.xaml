<Window x:Class="Northville_Library.CreateNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Northville_Library"
        mc:Ignorable="d"
        Title="CreateNew" Height="700" Width="1240" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Fill="#800000"/>
        <Image Source="/Assets/Northville Logo.png" Margin="26,26,26,89" />


        <StackPanel Grid.Column="1" HorizontalAlignment="Center" Width="620" Margin="0,100,0,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Label Content="Login ID" Margin="0,0,30,0" FontFamily="Yu Gothic UI" FontSize="16" Width="142"/>
                <TextBox x:Name="idTB" HorizontalAlignment="Center" Width="220" Height="30" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="393">
                <Label Content="Password" Margin="0,0,95.9,0" FontFamily="Yu Gothic UI" FontSize="16"/>
                <TextBox x:Name="passwordTB" Width="220" Height="30" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="394">
                <Label Content="First Name" Margin="0,0,87,0" FontFamily="Yu Gothic UI" FontSize="16"/>
                <TextBox x:Name="fnameTB" HorizontalAlignment="Center" Width="220" Height="30" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="396">
                <Label Content="Last Name" Margin="0,0,89.3,0" FontFamily="Yu Gothic UI" FontSize="16"/>
                <TextBox x:Name="lnameTB" HorizontalAlignment="Center" Width="220" Height="30" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="397">
                <Label Content="Contact No." Margin="0,0,80.5,0" FontFamily="Yu Gothic UI" FontSize="16"/>
                <TextBox x:Name="contactTB" HorizontalAlignment="Center" Width="220" Height="30" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="396">
                <Label Content="Email" Margin="0,0,126.5,0" FontFamily="Yu Gothic UI" FontSize="16"/>
                <TextBox x:Name="emailTB" HorizontalAlignment="Center" Width="220" Height="30" FontSize="18"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" Width="396">
                <Label Content="Role Access" Margin="0,0,82.2,0" FontFamily="Yu Gothic UI" FontSize="16"/>
                <ComboBox x:Name="roleCB" SelectedValuePath="Content" Width="220" FontFamily="Yu Gothic UI" FontSize="16" SelectedIndex="0">
                    <ComboBoxItem Content="Student"/>
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="Librarian"/>
                </ComboBox>
            </StackPanel>

            <Button x:Name="newuserBT" Content="Create Login"  Margin="0,30,0,0" Width="120" Height="40" Click="newuserBT_Click"/>

        </StackPanel>

    </Grid>
</Window>
