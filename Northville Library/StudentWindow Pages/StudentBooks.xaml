<Page x:Class="Northville_Library.StudentWindow_Pages.StudentBooks"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Northville_Library.StudentWindow_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="815"
      Title="StudentBooks">

    <Grid Background="#800000">
        <StackPanel>
            <Label Content="Books" FontSize="40" Foreground="White" Margin="25,30,25,5" FontWeight="Bold"/>
            <GroupBox Header="All Available Books" Margin="20,10,30,11" FontSize="20" Foreground="White">
                <StackPanel>
                    <DataGrid x:Name="booksDataGrid" AutoGenerateColumns="True" IsReadOnly="True" SelectionMode="Single" Height="400" 
                              FontSize="15" ColumnWidth="*" Margin="5" SelectionChanged="booksDataGrid_SelectionChanged" AutoGeneratingColumn="booksDataGrid_AutoGeneratingColumn"/>
                    <Label x:Name="booksresultsLBL" Content="" Foreground="White" Margin="25,0,35,1" FontWeight="Bold" FontSize="15"/>
                </StackPanel>
            </GroupBox>
            <Button x:Name="borrowBTN" Content="Borrow Book" Width="150" Height="45" FontSize="15" Margin="10" IsEnabled="False" Click="borrowBTN_Click"/>
        </StackPanel>
    </Grid>
</Page>
