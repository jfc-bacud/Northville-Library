<Page x:Class="Northville_Library.LibrarianWindow_Pages.LibrarianTransactions"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Northville_Library.LibrarianWindow_Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="815"
 Title="LibraryTransactions">
    <Grid Background="#800000">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Transactions" FontSize="40" Foreground="White" Margin="25,5,25,0" FontWeight="Bold"/>
                <Button x:Name="finesBTN" Width="100" Height="25" Content="View Fines"  Margin="390,60,25,0" Click="finesBTN_Click"/>
            </StackPanel>
            <GroupBox Header="Transactions List" Margin="20,5,30,11" FontSize="20" Foreground="White" Height="489">
                <StackPanel>
                    <DataGrid x:Name="transactionDataGrid" AutoGenerateColumns="True" IsReadOnly="True" 
                         SelectionMode="Single" Height="449" FontSize="15" ColumnWidth="*" Margin="5" 
                         AutoGeneratingColumn="transactionDataGrid_AutoGeneratingColumn" 
                         SelectionChanged="transactionDataGrid_SelectionChanged"/>
                </StackPanel>
            </GroupBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="returnBTN" Content="Mark as Returned" Width="150" Height="40" FontSize="13" Click="returnTN_Click" Margin="0,0,5,0" IsEnabled="False"/>
                <Button x:Name="deselectBTN" Content="Deselect" Width="150" FontSize="13" Click="deselectBTN_Click" IsEnabled="False"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
